&GLOBAL
  PROJECT Gold
  RUN_TYPE ENERGY
  PRINT_LEVEL low
&END GLOBAL

&FORCE_EVAL
  METHOD QS
  &SUBSYS
    &KIND He1
     ELEMENT He
     &BASIS                                ! Basis set for He
     1
     1 0 0 2 1
     0.2432879285E+01       0.4301284983E+00
     0.4330512863E+00       0.6789135305E+00
     &END
     POTENTIAL GTH-PBE-q2
    &END KIND
    &KIND Au
      BASIS_SET SZV-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q11
   &END KIND
 
    &CELL
      A    15.061500000    0.000000000    0.000000000
      B     7.530750000   13.043650000    0.000000000
      C     0.000000000    0.000000000   15.000000000
    &END CELL

    &TOPOLOGY
      COORD_FILE_NAME mol.xyz
      COORD_FILE_FORMAT xyz
    &END TOPOLOGY
  &END SUBSYS

  &DFT
    BASIS_SET_FILE_NAME /shared/ucl/apps/cp2k/7.1/gnu-4.9.2/cp2k-7.1/data/BASIS_MOLOPT
    POTENTIAL_FILE_NAME /shared/ucl/apps/cp2k/7.1/gnu-4.9.2/cp2k-7.1/data/POTENTIAL
    CHARGE 0
    #LSD
    &QS
        METHOD GAPW
        EPS_DEFAULT 1.0E-14
    &END QS
    &POISSON
      PERIODIC XYZ
      POISSON_SOLVER periodic
    &END POISSON
    &MGRID
      CUTOFF 500
      NGRIDS 6
    &END MGRID
    &SCF
      SCF_GUESS ATOMIC
      EPS_SCF 1.0E-8
      MAX_SCF 100
      ADDED_MOS 200
      #CHOLESKY REDUCE
      &SMEAR ON
        METHOD FERMI_DIRAC
        ELECTRONIC_TEMPERATURE [K] 1000
      &END SMEAR
      &DIAGONALIZATION T
        ALGORITHM STANDARD
      &END DIAGONALIZATION
      &OUTER_SCF
        EPS_SCF 1.0E-6
	OPTIMIZER SD
 	MAX_SCF 100
      &END OUTER_SCF
      &MIXING
        METHOD PULAY_MIXING
       	ALPHA 0.2
       	NBUFFER 5
      &END MIXING
    &END SCF
    &XC
      DENSITY_CUTOFF 1.0e-9
      &XC_GRID
         XC_SMOOTH_RHO SPLINE3
         XC_DERIV SPLINE3_SMOOTH
      &END XC_GRID
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC

    &PRINT
      &AO_MATRICES
    #     #ADD_LAST NUMERIC
    #     #DENSITY .TRUE.
         KOHN_SHAM_MATRIX .TRUE.
    #	 OVERLAP .TRUE.
    #     #KINETIC_ENERGY .TRUE.
    #     #MATRIX_VXC .TRUE.
    #     #POTENTIAL_ENERGY .TRUE.
    #     #CORE_HAMILTONIAN
    #     #NDIGITS 30
    	 FILENAME KS_MAT
      &END AO_MATRICES
    #  &MO
    #   EIGENVECTORS .TRUE.
    #   &EACH
    #    QS_SCF 0
    #   &END
    #   FILENAME ./EIGEN.dat
    #  &END MO
    &END PRINT
  &END DFT
&END FORCE_EVAL